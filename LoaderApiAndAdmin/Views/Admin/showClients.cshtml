
@{
    ViewBag.Title = "showClients";
}

<h2>List of Clients</h2>

<body style="background-color:cadetblue;">

    <table style="width:100%">
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Contact No</th>
            <th>Company Name</th>
            <th>Delete Client</th>
        </tr>
        @foreach (var clients in @ViewBag.ClientsData)
        {
            <tr>
                <td>@clients.FirstName</td>
                <td>@clients.LastName</td>
                <td>@clients.Email</td>
                <td>@clients.PhoneNo</td>
                <td>@clients.CompanyName</td>
                <td><a style="color:red;" href=@Url.Action("DeleteSingleClient", "Admin",new { id= clients.Id })>Delete</a></td>
            </tr>
        }


    </table>

</body>